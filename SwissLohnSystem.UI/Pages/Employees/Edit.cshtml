@page "{id:int}"
@model SwissLohnSystem.UI.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Mitarbeiter bearbeiten";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Mitarbeiter bearbeiten</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies/Details/@Model.CompanyId">Firma</a></li>
                    <li class="breadcrumb-item active">Bearbeiten</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger">@err</div>
        }
        @if (TempData["Alert"] is string alert && !string.IsNullOrWhiteSpace(alert))
        {
            <div class="alert alert-info">@alert</div>
        }

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">Mitarbeiterdaten</h3>
                <a class="btn btn-secondary btn-sm" href="~/Companies/Details/@Model.CompanyId">
                    <i class="fas fa-arrow-left"></i> Zurück zur Firma
                </a>
            </div>

            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.Id" />
                    <input type="hidden" asp-for="Input.CompanyId" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <!-- Basisdaten -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.FirstName">Vorname</label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.LastName">Nachname</label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Email">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Position">Position</label>
                            <input asp-for="Input.Position" class="form-control" />
                            <span asp-validation-for="Input.Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BirthDate">Geburtsdatum</label>
                            <input asp-for="Input.BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MaritalStatus">Familienstand</label>
                            <select asp-for="Input.MaritalStatus" class="form-control">
                                <option value="">-- bitte wählen --</option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                            </select>
                            <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.ChildCount">Anzahl Kinder</label>
                            <input asp-for="Input.ChildCount" type="number" min="0" class="form-control" />
                            <span asp-validation-for="Input.ChildCount" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Gehaltsart -->
                    <hr />
                    <h5>Gehaltsart & Grundlohn</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.SalaryTypeOption">Gehaltsart</label>
                            <select asp-for="Input.SalaryTypeOption" class="form-control" id="salaryTypeSelect">
                                <option value="">-- bitte wählen --</option>
                                <option value="Monatslohn">Monatslohn</option>
                                <option value="Stundenlohn">Stundenlohn</option>
                            </select>
                            <span asp-validation-for="Input.SalaryTypeOption" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.HourlyRate">Stundenlohn</label>
                            <input asp-for="Input.HourlyRate"
                                   type="number"
                                   step="any"
                                   class="form-control" />
                            <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MonthlyHours">Monatsstunden</label>
                            <input asp-for="Input.MonthlyHours" type="number" min="0" class="form-control" />
                            <span asp-validation-for="Input.MonthlyHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BruttoSalary">Bruttolohn (Monat)</label>
                            <input asp-for="Input.BruttoSalary"
                                   type="number"
                                   step="any"
                                   class="form-control" />
                            <span asp-validation-for="Input.BruttoSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.StartDate">Startdatum</label>
                            <input asp-for="Input.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.EndDate">Enddatum</label>
                            <input asp-for="Input.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Arbeitszeit & Lohnparameter -->
                    <hr />
                    <h5>Arbeitszeit & Lohnparameter</h5>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="Input.WeeklyHours">Wochenstunden</label>
                            <input asp-for="Input.WeeklyHours"
                                   type="number"
                                   min="1"
                                   max="60"
                                   step="0.5"
                                   class="form-control" />
                            <span asp-validation-for="Input.WeeklyHours" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.PensumPercent">Pensum %</label>
                            <input asp-for="Input.PensumPercent"
                                   type="number"
                                   step="any"
                                   min="0"
                                   max="100"
                                   class="form-control" />
                            <span asp-validation-for="Input.PensumPercent" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.HolidayRate">Ferienentschädigung %</label>
                            <input asp-for="Input.HolidayRate"
                                   type="number"
                                   step="any"
                                   min="0"
                                   max="100"
                                   class="form-control" />
                            <span asp-validation-for="Input.HolidayRate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.OvertimeRate">Überstundenzuschlag Faktor</label>
                            <input asp-for="Input.OvertimeRate"
                                   type="number"
                                   step="any"
                                   min="0"
                                   max="10"
                                   class="form-control" />
                            <span asp-validation-for="Input.OvertimeRate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <div class="form-check">
                                <input asp-for="Input.HolidayEligible" class="form-check-input" />
                                <label asp-for="Input.HolidayEligible" class="form-check-label">Ferienanspruch (ausbezahlt / berechnet)</label>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="form-check">
                                <input asp-for="Input.ThirteenthEligible" class="form-check-input" />
                                <label asp-for="Input.ThirteenthEligible" class="form-check-label">13. Monatslohn</label>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="form-check">
                                <input asp-for="Input.ThirteenthProrated" class="form-check-input" />
                                <label asp-for="Input.ThirteenthProrated" class="form-check-label">13. Lohn pro rata verteilen</label>
                            </div>
                        </div>
                    </div>

                    <!-- Sozialversicherungen -->
                    <hr />
                    <h5>Sozialversicherungen (AN/AG Beiträge anwenden)</h5>

                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyAHV" class="form-check-input" />
                                <label asp-for="Input.ApplyAHV" class="form-check-label">AHV/IV/EO</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyALV" class="form-check-input" />
                                <label asp-for="Input.ApplyALV" class="form-check-label">ALV</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyBVG" class="form-check-input" />
                                <label asp-for="Input.ApplyBVG" class="form-check-label">BVG</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyNBU" class="form-check-input" />
                                <label asp-for="Input.ApplyNBU" class="form-check-label">NBU</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyBU" class="form-check-input" />
                                <label asp-for="Input.ApplyBU" class="form-check-label">BU</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <div class="form-check">
                                <input asp-for="Input.ApplyFAK" class="form-check-input" />
                                <label asp-for="Input.ApplyFAK" class="form-check-label">FAK</label>
                            </div>
                        </div>
                    </div>

                    <!-- Quellensteuer & Kanton -->
                    <hr />
                    <h5>Quellensteuer & Kanton</h5>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="Input.PermitType">Bewilligung</label>
                            <select asp-for="Input.PermitType"
                                    class="form-control"
                                    asp-items="Model.PermitTypes">
                            </select>
                            <span asp-validation-for="Input.PermitType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Canton">Kanton</label>
                            <input asp-for="Input.Canton" class="form-control" maxlength="2" />
                            <span asp-validation-for="Input.Canton" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.WithholdingTaxCode">Quellensteuer-Tarif</label>
                            <select asp-for="Input.WithholdingTaxCode"
                                    class="form-control"
                                    asp-items="Model.QstTariffCodes"
                                    id="QstTarifSelect">
                            </select>
                            <span asp-validation-for="Input.WithholdingTaxCode" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <div class="form-check mt-4">
                                <input asp-for="Input.ApplyQST"
                                       class="form-check-input"
                                       id="ApplyQstCheckbox" />
                                <label asp-for="Input.ApplyQST" class="form-check-label">Quellensteuer anwenden</label>
                            </div>
                            <div class="form-check mt-1">
                                <input asp-for="Input.ChurchMember" class="form-check-input" />
                                <label asp-for="Input.ChurchMember" class="form-check-label">Kirchensteuerpflichtig</label>
                            </div>
                        </div>
                    </div>

                    <!-- Sozialversicherung & Vorsorge -->
                    <hr />
                    <h5>Sozialversicherung & Vorsorge</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.AHVNumber">AHV-Nummer</label>
                            <input asp-for="Input.AHVNumber" class="form-control" placeholder="756.1234.5678.97" />
                            <span asp-validation-for="Input.AHVNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Krankenkasse">Krankenkasse</label>
                            <input asp-for="Input.Krankenkasse" class="form-control" />
                            <span asp-validation-for="Input.Krankenkasse" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BVGPlan">BVG-Plan</label>
                            <select asp-for="Input.BVGPlan"
                                    class="form-control"
                                    asp-items="Model.BvgPlans">
                            </select>
                            <span class="form-text text-muted">
                                Wählen Sie den BVG-Plan des Mitarbeiters oder behalten Sie den bestehenden Eintrag.
                            </span>
                            <span asp-validation-for="Input.BVGPlan" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Adresse & Kontakt -->
                    <hr />
                    <h5>Adresse & Kontakt</h5>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Address">Adresse</label>
                            <input asp-for="Input.Address" class="form-control" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Input.Zip">PLZ</label>
                            <input asp-for="Input.Zip" class="form-control" />
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.City">Ort</label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Phone">Telefon</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group form-check mt-3">
                        <input asp-for="Input.Active" type="checkbox" class="form-check-input" />
                        <label asp-for="Input.Active" class="form-check-label">Aktiv</label>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Speichern
                        </button>
                        <a class="btn btn-light" href="~/Companies/Details/@Model.CompanyId">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const select = document.getElementById('salaryTypeSelect');
            const hourly = document.getElementById('Input_HourlyRate');
            const brutto = document.getElementById('Input_BruttoSalary');

            function updateReq() {
                if (!select || !hourly || !brutto) return;
                const v = select.value;
                if (v === 'Stundenlohn') {
                    hourly.setAttribute('required', 'required');
                    brutto.removeAttribute('required');
                } else if (v === 'Monatslohn') {
                    brutto.setAttribute('required', 'required');
                    hourly.removeAttribute('required');
                } else {
                    hourly.removeAttribute('required');
                    brutto.removeAttribute('required');
                }
            }

            if (select) {
                select.addEventListener('change', updateReq);
                updateReq();
            }

            // QST dropdown enable/disable
            const qstCheckbox = document.getElementById('ApplyQstCheckbox');
            const qstSelect = document.getElementById('QstTarifSelect');

            function toggleQstSelect() {
                if (!qstCheckbox || !qstSelect) return;
                qstSelect.disabled = !qstCheckbox.checked;
            }

            document.addEventListener('DOMContentLoaded', toggleQstSelect);
            if (qstCheckbox) {
                qstCheckbox.addEventListener('change', toggleQstSelect);
            }
        })();
    </script>
}

@page
@model SwissLohnSystem.UI.Pages.Companies.Employees.CreateModel
@{
    ViewData["Title"] = "Neuer Mitarbeiter";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Neuer Mitarbeiter</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies/Details/@Model.CompanyId">Firma</a></li>
                    <li class="breadcrumb-item active">Neuer Mitarbeiter</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger">@err</div>
        }
        @if (TempData["Toast"] is string toast && !string.IsNullOrWhiteSpace(toast))
        {
            <div class="alert alert-success">@toast</div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mitarbeiterdaten</h3>
            </div>

            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.CompanyId" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <!-- Basisdaten -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.FirstName">Vorname <span class="text-danger">*</span></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.LastName">Nachname <span class="text-danger">*</span></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Gender">Geschlecht</label>
                            <select asp-for="Input.Gender" class="form-control">
                                <option value="">-- bitte wählen --</option>
                                <option value="M">Männlich (M)</option>
                                <option value="F">Weiblich (F)</option>
                                <option value="X">Divers (X)</option>
                            </select>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Quellensteuer/KTG kann abhängig vom Geschlecht sein.
                            </small>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="Input.Email">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="Input.Position">Position</label>
                            <input asp-for="Input.Position" class="form-control" />
                            <span asp-validation-for="Input.Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BirthDate">Geburtsdatum</label>
                            <input asp-for="Input.BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MaritalStatus">Familienstand</label>
                            <select asp-for="Input.MaritalStatus" class="form-control">
                                <option value="">-- bitte wählen --</option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                            </select>
                            <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.ChildCount">Anzahl Kinder</label>
                            <input asp-for="Input.ChildCount" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.ChildCount" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Gehaltsart -->
                    <hr />
                    <h5>Gehaltsart &amp; Grundlohn</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.SalaryType">Gehaltsart <span class="text-danger">*</span></label>
                            <select asp-for="Input.SalaryType" class="form-control" id="salaryTypeSelect">
                                <option value="">-- bitte wählen --</option>
                                <option value="Monthly">Monatslohn</option>
                                <option value="Hourly">Stundenlohn</option>
                            </select>
                            <span asp-validation-for="Input.SalaryType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.HourlyRate">Stundenlohn</label>
                            <input asp-for="Input.HourlyRate" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MonthlyHours">Monatsstunden</label>
                            <input asp-for="Input.MonthlyHours" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.MonthlyHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BruttoSalary">Bruttolohn (Monat)</label>
                            <input asp-for="Input.BruttoSalary" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.BruttoSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.StartDate">Startdatum <span class="text-danger">*</span></label>
                            <input asp-for="Input.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.EndDate">Enddatum</label>
                            <input asp-for="Input.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Sozialversicherung & Vorsorge -->
                    <hr />
                    <h5>Sozialversicherung &amp; Vorsorge</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.AHVNumber">AHV-Nummer</label>
                            <input asp-for="Input.AHVNumber" class="form-control" placeholder="756.1234.5678.97" />
                            <span asp-validation-for="Input.AHVNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Krankenkasse">Krankenkasse</label>
                            <input asp-for="Input.Krankenkasse" class="form-control" />
                            <span asp-validation-for="Input.Krankenkasse" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label>BVG-Plan (PK)</label>

                            <div class="form-check mb-2">
                                <input asp-for="UseCompanyBvgPlan" class="form-check-input" id="useCompanyBvgPlanChk" />
                                <label class="form-check-label" for="useCompanyBvgPlanChk">
                                    Firmen-Standard verwenden
                                </label>
                            </div>

                            <select asp-for="Input.BVGPlan"
                                    class="form-control"
                                    asp-items="Model.BvgPlans"
                                    id="bvgPlanSelect">
                            </select>

                            <small class="form-text text-muted">
                                Wenn Firmen-Standard aktiv ist, wird kein Plan gespeichert (Fallback auf Company Default).
                            </small>
                            <span asp-validation-for="Input.BVGPlan" class="text-danger"></span>
                        </div>
                    </div>

                    <h5>Quellensteuer (QST)</h5>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <div class="form-check mt-4">
                                <input asp-for="Input.ApplyQST" class="form-check-input" id="applyQstCheck" />
                                <label class="form-check-label">Quellensteuer anwenden</label>
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="Input.PermitType"></label>
                            <select asp-for="Input.PermitType"
                                    class="form-control"
                                    asp-items="Model.PermitTypes"
                                    id="Input_PermitType">
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="Input.WithholdingTaxCode">QST-Code</label>
                            <select asp-for="Input.WithholdingTaxCode"
                                    class="form-control"
                                    id="Input_WithholdingTaxCode">
                                <option value="">-- bitte wählen --</option>
                            </select>
                            <span asp-validation-for="Input.WithholdingTaxCode" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <div class="form-check mt-4">
                                <input asp-for="Input.ChurchMember" class="form-check-input" />
                                <label class="form-check-label">Kirchensteuerpflichtig</label>
                            </div>
                        </div>
                    </div>

                    <!-- Adresse & Kontakt -->
                    <hr />
                    <h5>Adresse &amp; Kontakt</h5>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Canton">Kanton</label>
                            <select asp-for="Input.Canton" class="form-control" id="Input_Canton">
                                <option value="">--</option>
                                <option value="AG">Aargau (AG)</option>
                                <option value="AI">Appenzell Innerrhoden (AI)</option>
                                <option value="AR">Appenzell Ausserrhoden (AR)</option>
                                <option value="BE">Bern (BE)</option>
                                <option value="BL">Basel-Landschaft (BL)</option>
                                <option value="BS">Basel-Stadt (BS)</option>
                                <option value="FR">Freiburg / Fribourg (FR)</option>
                                <option value="GE">Genève / Genf (GE)</option>
                                <option value="GL">Glarus (GL)</option>
                                <option value="GR">Graubünden / Grisons (GR)</option>
                                <option value="JU">Jura (JU)</option>
                                <option value="LU">Luzern (LU)</option>
                                <option value="NE">Neuchâtel (NE)</option>
                                <option value="NW">Nidwalden (NW)</option>
                                <option value="OW">Obwalden (OW)</option>
                                <option value="SG">St. Gallen (SG)</option>
                                <option value="SH">Schaffhausen (SH)</option>
                                <option value="SZ">Schwyz (SZ)</option>
                                <option value="SO">Solothurn (SO)</option>
                                <option value="TG">Thurgau (TG)</option>
                                <option value="TI">Ticino / Tessin (TI)</option>
                                <option value="UR">Uri (UR)</option>
                                <option value="VD">Vaud / Waadt (VD)</option>
                                <option value="VS">Valais / Wallis (VS)</option>
                                <option value="ZG">Zug (ZG)</option>
                                <option value="ZH">Zürich (ZH)</option>
                            </select>
                            <span asp-validation-for="Input.Canton" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Address">Adresse</label>
                            <input asp-for="Input.Address" class="form-control" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Input.Zip">PLZ</label>
                            <input asp-for="Input.Zip" class="form-control" />
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.City">Ort</label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Phone">Telefon</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group form-check mt-3">
                        <input asp-for="Input.Active" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="Input.Active">Aktiv</label>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-outline-secondary" href="~/Companies/Details/@Model.CompanyId">Abbrechen</a>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.API_BASE_URL = "@(ViewData["ApiBaseUrl"] ?? "")";
        window.COMPANY_ID = @Model.CompanyId;
    </script>
    <script src="~/js/qst-codes.js"></script>
}

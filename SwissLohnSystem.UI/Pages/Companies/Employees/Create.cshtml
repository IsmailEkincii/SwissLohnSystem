@page
@model SwissLohnSystem.UI.Pages.Companies.Employees.CreateModel
@{
    ViewData["Title"] = "Neuer Mitarbeiter";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Neuer Mitarbeiter</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies/Details/@Model.CompanyId">Firma</a></li>
                    <li class="breadcrumb-item active">Neuer Mitarbeiter</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger">@err</div>
        }
        @if (TempData["Alert"] is string alert && !string.IsNullOrWhiteSpace(alert))
        {
            <div class="alert alert-info">@alert</div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mitarbeiterdaten</h3>
            </div>

            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.CompanyId" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <!-- Basisdaten -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.FirstName">Vorname <span class="text-danger">*</span></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.LastName">Nachname <span class="text-danger">*</span></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Email">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Position">Position</label>
                            <input asp-for="Input.Position" class="form-control" />
                            <span asp-validation-for="Input.Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BirthDate">Geburtsdatum</label>
                            <input asp-for="Input.BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MaritalStatus">Familienstand</label>
                            <select asp-for="Input.MaritalStatus" class="form-control">
                                <option value="">-- bitte wählen --</option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                            </select>
                            <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.ChildCount">Anzahl Kinder</label>
                            <input asp-for="Input.ChildCount" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.ChildCount" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Gehaltsart -->
                    <hr />
                    <h5>Gehaltsart &amp; Grundlohn</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.SalaryType">Gehaltsart <span class="text-danger">*</span></label>
                            <select asp-for="Input.SalaryType" class="form-control" id="salaryTypeSelect">
                                <option value="">-- bitte wählen --</option>
                                <option value="Monthly">Monatslohn</option>
                                <option value="Hourly">Stundenlohn</option>
                            </select>
                            <span asp-validation-for="Input.SalaryType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.HourlyRate">Stundenlohn</label>
                            <input asp-for="Input.HourlyRate" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.MonthlyHours">Monatsstunden</label>
                            <input asp-for="Input.MonthlyHours" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.MonthlyHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BruttoSalary">Bruttolohn (Monat)</label>
                            <input asp-for="Input.BruttoSalary" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.BruttoSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.StartDate">Startdatum <span class="text-danger">*</span></label>
                            <input asp-for="Input.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.EndDate">Enddatum</label>
                            <input asp-for="Input.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Sozialversicherung & Vorsorge -->
                    <hr />
                    <h5>Sozialversicherung &amp; Vorsorge</h5>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.AHVNumber">AHV-Nummer</label>
                            <input asp-for="Input.AHVNumber" class="form-control" placeholder="756.1234.5678.97" />
                            <span asp-validation-for="Input.AHVNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Krankenkasse">Krankenkasse</label>
                            <input asp-for="Input.Krankenkasse" class="form-control" />
                            <span asp-validation-for="Input.Krankenkasse" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.BVGPlan">BVG-Plan</label>
                            <input asp-for="Input.BVGPlan" class="form-control" />
                            <span class="form-text text-muted">
                                Freitext (z.B. Standard / Kader / Kein BVG).
                            </span>
                            <span asp-validation-for="Input.BVGPlan" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Kanton / Adresse & Kontakt -->
                    <hr />
                    <h5>Adresse &amp; Kontakt</h5>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Canton">Kanton</label>
                            <select asp-for="Input.Canton" class="form-control">
                                <option value="">-- bitte wählen --</option>
                                <option value="ZH">ZH</option>
                                <option value="BE">BE</option>
                                <option value="LU">LU</option>
                                <option value="UR">UR</option>
                                <option value="SZ">SZ</option>
                                <option value="OW">OW</option>
                                <option value="NW">NW</option>
                                <option value="GL">GL</option>
                                <option value="ZG">ZG</option>
                                <option value="FR">FR</option>
                                <option value="SO">SO</option>
                                <option value="BS">BS</option>
                                <option value="BL">BL</option>
                                <option value="SH">SH</option>
                                <option value="AR">AR</option>
                                <option value="AI">AI</option>
                                <option value="SG">SG</option>
                                <option value="GR">GR</option>
                                <option value="AG">AG</option>
                                <option value="TG">TG</option>
                                <option value="TI">TI</option>
                                <option value="VD">VD</option>
                                <option value="VS">VS</option>
                                <option value="NE">NE</option>
                                <option value="GE">GE</option>
                                <option value="JU">JU</option>
                            </select>
                            <span asp-validation-for="Input.Canton" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Address">Adresse</label>
                            <input asp-for="Input.Address" class="form-control" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Input.Zip">PLZ</label>
                            <input asp-for="Input.Zip" class="form-control" />
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.City">Ort</label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Phone">Telefon</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group form-check mt-3">
                        <input asp-for="Input.Active" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="Input.Active">Aktiv</label>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-outline-secondary" href="~/Companies/Details/@Model.CompanyId">Abbrechen</a>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const select = document.getElementById('salaryTypeSelect');
            const hourly = document.getElementById('Input_HourlyRate');
            const brutto = document.getElementById('Input_BruttoSalary');

            function updateReq() {
                if (!select || !hourly || !brutto) return;
                const v = select.value;
                if (v === 'Hourly') {
                    hourly.setAttribute('required', 'required');
                    brutto.removeAttribute('required');
                } else if (v === 'Monthly') {
                    brutto.setAttribute('required', 'required');
                    hourly.removeAttribute('required');
                } else {
                    hourly.removeAttribute('required');
                    brutto.removeAttribute('required');
                }
            }
            if (select) {
                select.addEventListener('change', updateReq);
                updateReq();
            }
        })();
    </script>
}

@page
@model SwissLohnSystem.UI.Pages.Companies.CreateModel
@{
    ViewData["Title"] = "Neue Firma";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Neue Firma</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item active">Neue Firma</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger">@err</div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Firmendaten</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group">
                        <label asp-for="Input.Name">Name <span class="text-danger">*</span></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Canton">Kanton <span class="text-danger">*</span></label>
                        <select asp-for="Input.Canton" class="form-control">
                            <option value="">-- bitte wählen --</option>
                            @foreach (var k in Model.Cantons)
                            {
                                <option value="@k">@k</option>
                            }
                        </select>
                        <span asp-validation-for="Input.Canton" class="text-danger"></span>
                    </div>

                    <!-- ✅ Default BVG Plan -->
                    <div class="form-group">
                        <label asp-for="Input.DefaultBvgPlanCode">Default BVG-Plan (PK)</label>
                        <select asp-for="Input.DefaultBvgPlanCode"
                                class="form-control"
                                asp-items="Model.BvgPlans">
                        </select>
                        <span class="form-text text-muted">
                            Wird verwendet, wenn ein Mitarbeiter keinen eigenen BVG-Plan hat.
                        </span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Address">Adresse</label>
                        <input asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Email">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Phone">Telefon</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.TaxNumber">Steuernummer</label>
                            <input asp-for="Input.TaxNumber" class="form-control" />
                            <span asp-validation-for="Input.TaxNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-outline-secondary" href="~/Companies">Abbrechen</a>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

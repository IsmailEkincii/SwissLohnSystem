@page "{id:int}"
@model SwissLohnSystem.UI.Pages.Companies.EditModel
@{
    ViewData["Title"] = "Firma bearbeiten";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Firma bearbeiten</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item active">Bearbeiten</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">Firmendaten</h3>
                <a class="btn btn-secondary btn-sm" href="~/Companies">
                    <i class="fas fa-arrow-left"></i> Zurück
                </a>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Name">Name</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Input.Canton">Kanton</label>
                            <input asp-for="Input.Canton" class="form-control" />
                            <span asp-validation-for="Input.Canton" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Address">Adresse</label>
                        <input asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Email">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.Phone">Telefon</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Input.TaxNumber">Steuernummer</label>
                            <input asp-for="Input.TaxNumber" class="form-control" />
                            <span asp-validation-for="Input.TaxNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Speichern
                    </button>
                    <a class="btn btn-light" href="~/Companies">Abbrechen</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page "{id:int}"
@model SwissLohnSystem.UI.Pages.Companies.DetailsModel
@{
    ViewData["Title"] = "Firmendetails";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Firma: @(Model.Vm?.Company?.Name ?? "—")</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="d-flex justify-content-between mb-2">
            <a class="btn btn-secondary btn-sm" href="~/Companies">
                <i class="fas fa-arrow-left"></i> Zurück
            </a>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary btn-sm" href="~/Companies/Edit/@Model.Id">
                    <i class="fas fa-edit"></i> Firma bearbeiten
                </a>
                <a class="btn btn-primary btn-sm" href="~/Companies/Employees/Create?companyId=@Model.Id">
                    <i class="fas fa-user-plus"></i> Neue/r Mitarbeiter/in
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" data-bs-toggle="tab" href="#info" role="tab">Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" data-bs-toggle="tab" href="#mitarbeiter" role="tab">Mitarbeiter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" data-bs-toggle="tab" href="#loehne" role="tab">Löhne</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" data-bs-toggle="tab" href="#files" role="tab">Dateien &amp; Notizen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" data-bs-toggle="tab" href="#settings" role="tab">Einstellungen</a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content">

                    <!-- Info -->
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Vm?.Company?.Name</dd>

                            <dt class="col-sm-3">Kanton</dt>
                            <dd class="col-sm-9">@Model.Vm?.Company?.Canton</dd>

                            <dt class="col-sm-3">Adresse</dt>
                            <dd class="col-sm-9">
                                @(!string.IsNullOrWhiteSpace(Model.Vm?.Company?.Address)
                                                                ? Model.Vm!.Company!.Address
                                                                : "—")
                            </dd>

                            <dt class="col-sm-3">E-Mail</dt>
                            <dd class="col-sm-9">
                                @(!string.IsNullOrWhiteSpace(Model.Vm?.Company?.Email)
                                                                ? Model.Vm!.Company!.Email
                                                                : "—")
                            </dd>

                            <dt class="col-sm-3">Telefon</dt>
                            <dd class="col-sm-9">
                                @(!string.IsNullOrWhiteSpace(Model.Vm?.Company?.Phone)
                                                                ? Model.Vm!.Company!.Phone
                                                                : "—")
                            </dd>

                            <dt class="col-sm-3">Steuernummer</dt>
                            <dd class="col-sm-9">
                                @(!string.IsNullOrWhiteSpace(Model.Vm?.Company?.TaxNumber)
                                                                ? Model.Vm!.Company!.TaxNumber
                                                                : "—")
                            </dd>
                        </dl>
                    </div>

                    <!-- Mitarbeiter -->
                    <div class="tab-pane fade" id="mitarbeiter" role="tabpanel">
                        <div class="mb-2">
                            <a class="btn btn-primary btn-sm" href="~/Companies/Employees/Create?companyId=@Model.Id">
                                <i class="fas fa-user-plus"></i> Mitarbeiter hinzufügen
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:60px;">#</th>
                                        <th>Name</th>
                                        <th>E-Mail</th>
                                        <th>Position</th>
                                        <th>Status</th>
                                        <th style="width:200px;">Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Vm?.Employees is { } emps && emps.Any())
                                    {
                                        var i = 1;
                                        foreach (var e in emps)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@e.FirstName @e.LastName</td>
                                                <td>@(string.IsNullOrWhiteSpace(e.Email) ? "—" : e.Email)</td>
                                                <td>@(string.IsNullOrWhiteSpace(e.Position) ? "—" : e.Position)</td>
                                                <td>
                                                    @if (e.Active)
                                                    {
                                                        <span class="badge badge-success">Aktiv</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Inaktiv</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="btn btn-outline-info btn-sm" href="~/Employees/Details/@e.Id">
                                                        <i class="fas fa-eye"></i> Details
                                                    </a>
                                                    <a class="btn btn-outline-secondary btn-sm" href="~/Employees/Edit/@e.Id">
                                                        <i class="fas fa-edit"></i> Bearbeiten
                                                    </a>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted p-4">
                                                Keine Mitarbeiter vorhanden.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Löhne -->
                    <div class="tab-pane fade" id="loehne" role="tabpanel">
                        <div id="loehneRoot" data-company-id="@Model.Id"></div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label for="period" class="mb-1">Monat (YYYY-MM)</label>
                                <input id="period" type="month" class="form-control" />
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button id="btnLoadLohns" class="btn btn-primary">
                                    <i class="fas fa-sync-alt"></i> Laden
                                </button>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover" id="tblLohnMonthly">
                                    <thead>
                                        <tr>
                                            <th>Mitarbeiter</th>
                                            <th>Monat</th>
                                            <th>Brutto</th>
                                            <th>Abzüge (AN)</th> <!-- 🔥 eklendi -->
                                            <th>Netto</th>
                                            <th>Status</th>
                                            <th>Aktionen</th>
                                        </tr>
                                    </thead>
                                    <tbody><!-- rows via JS --></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

            </div>
        </div>

    </div>
</section>
@section Scripts {
    <script>
        // Razor tarafında JS'e context aktarma
        window.COMPANY_ID   = @Model.Id;
        window.API_BASE_URL = "@(ViewData["ApiBaseUrl"] ?? "")";
        console.log('[loehne] (cshtml) COMPANY_ID =', window.COMPANY_ID);
        console.log('[loehne] (cshtml) API_BASE_URL =', window.API_BASE_URL);
    </script>

    <script>
        (function () {
            function showTabByEl(el) {
                if (!el) return;
                if (typeof $ !== 'undefined' && $.fn && $.fn.tab) {
                    $(el).tab('show');
                    return;
                }
                if (window.bootstrap && bootstrap.Tab) {
                    new bootstrap.Tab(el).show();
                    return;
                }
            }

            if (window.location.hash) {
                var sel = 'a[data-bs-toggle="tab"][href="' + window.location.hash +
                          '"], a[data-toggle="tab"][href="' + window.location.hash + '"]';
                showTabByEl(document.querySelector(sel));
            }

            if (typeof $ !== 'undefined' && $.fn && $.fn.tab) {
                $('a[data-toggle="tab"], a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                    var href = e.target.getAttribute('href');
                    if (href) history.replaceState(null, '', href);
                });
            }
        })();
    </script>

    <!-- 🔥 Toast mesajları (Create/Edit sonrası) -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (TempData["ToastSuccess"] is string toastSuccess && !string.IsNullOrWhiteSpace(toastSuccess))
            {
                    <text>toastr.success("@toastSuccess");</text>
            }

            @if (TempData["ToastError"] is string toastError && !string.IsNullOrWhiteSpace(toastError))
            {
                    <text>toastr.error("@toastError");</text>
            }
        });
    </script>

    <!-- ❗ Burada SADECE dış script referansı olsun -->
    <script src="~/js/loehne-tab.js"></script>
}


@page "{id:int}"
@model SwissLohnSystem.UI.Pages.Lohn.DetailsModel
@{
    ViewData["Title"] = "Lohndetails";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lohndetails <small class="text-muted">#@Model.Id</small></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="~/Companies">Firmen</a></li>
                    <li id="bc-company" class="breadcrumb-item">Firma</li>
                    <li class="breadcrumb-item active">Lohndetails</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="d-flex justify-content-between mb-2">
            <a id="btnBackToCompany" class="btn btn-secondary btn-sm" href="~/Companies">
                <i class="fas fa-arrow-left"></i> Zurück zur Firma
            </a>

            <div>
                <button id="btnFinalize" class="btn btn-success btn-sm d-none">
                    <i class="fas fa-lock"></i> Finalisieren
                </button>
            </div>
        </div>

        <div class="row">
            <!-- Linke Spalte: Allgemein + Zusätze + Arbeitszeit -->
            <div class="col-lg-4">
                <!-- Allgemein -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Allgemein</h3>
                        <div class="card-tools">
                            <span id="badgeStatus" class="badge">—</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-5">Mitarbeiter</dt>
                            <dd class="col-7" id="employeeName">—</dd>

                            <dt class="col-5">Firma</dt>
                            <dd class="col-7" id="companyName">—</dd>

                            <dt class="col-5">Monat</dt>
                            <dd class="col-7" id="period">—</dd>

                            <dt class="col-5">Erstellt am</dt>
                            <dd class="col-7" id="createdAt">—</dd>
                        </dl>
                    </div>
                </div>

                <!-- Zusätze -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Zusätze</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Überstunden</span>
                            <strong id="overtimePay">—</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ferienentschädigung</span>
                            <strong id="holidayAllowance">—</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Kinderzulagen</span>
                            <strong id="childAllowance">—</strong>
                        </div>
                    </div>
                </div>

                <!-- Arbeitszeit (Monat) -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Arbeitszeit (Monat)</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6">Gesamtstunden</dt>
                            <dd class="col-6 text-right" id="ldmMonthlyHours">—</dd>

                            <dt class="col-6">Überstunden</dt>
                            <dd class="col-6 text-right" id="ldmMonthlyOvertime">—</dd>
                        </dl>
                        <small class="text-muted d-block mt-2">
                            Basis: gespeicherte Monatsstunden dieser Lohnabrechnung.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Rechte Spalte: finanzielle Übersicht + Detailtabelle -->
            <div class="col-lg-8">
                <!-- Sum Cards -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3 id="bruttoSalary">—</h3>
                                <p>Bruttolohn</p>
                            </div>
                            <div class="icon"><i class="fas fa-coins"></i></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3 id="totalDeductions">—</h3>
                                <p>Abzüge (Total)</p>
                            </div>
                            <div class="icon"><i class="fas fa-minus-circle"></i></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3 id="netSalary">—</h3>
                                <p>Netto auszuzahlen</p>
                            </div>
                            <div class="icon"><i class="fas fa-wallet"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Kurzfassung -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Abrechnung (Kurzfassung)</h3>
                        <div class="card-tools">
                            <span class="text-muted">Hinweis: Momentan werden nur zusammengefasste Positionen angezeigt.</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Position</th>
                                    <th class="text-right">Betrag</th>
                                </tr>
                            </thead>
                            <tbody id="itemsBody">
                                <!-- wird per JS gefüllt -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Detailabrechnung wie im PDF -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">Lohnabrechnung (Detail)</h3>
                        <small class="text-muted">Werte gemäss aktueller Berechnung</small>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0" id="ldmSlipTable">
                                <thead class="thead-light">
                                    <tr>
                                        <th style="width:40%;">Legende</th>
                                        <th style="width:10%;" class="text-right">%</th>
                                        <th style="width:15%;" class="text-right">Menge</th>
                                        <th style="width:15%;" class="text-right">Ansatz</th>
                                        <th style="width:20%;" class="text-right">Betrag</th>
                                    </tr>
                                </thead>
                                <tbody id="ldmSlipBody">
                                    <tr>
                                        <td colspan="5" class="text-center text-muted p-3">
                                            Lade Berechnungsdetails...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        window.API_BASE_URL = "@(ViewData["ApiBaseUrl"] ?? "")";
        window.LOHN_ID = @Model.Id;
    </script>
    <script src="~/js/lohn-details.js"></script>
}

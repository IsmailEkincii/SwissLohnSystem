@page
@model SwissLohnSystem.UI.Pages.Lohn.CreateModel
@{
    ViewData["Title"] = "Neue Lohnabrechnung";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>Neue Lohnabrechnung</h1></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    @if (Model.Company is not null)
                    {
                        <li class="breadcrumb-item">
                            <a href="~/Companies/Details/@Model.Company.Id">@Model.Company.Name</a>
                        </li>
                    }
                    <li class="breadcrumb-item active">Lohn abrechnen</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (!string.IsNullOrWhiteSpace(Model.Error))
        {
            <div class="alert alert-danger">@Model.Error</div>
        }
        else if (Model.Employee is null)
        {
            <div class="alert alert-warning">Mitarbeiterdaten konnten nicht geladen werden.</div>
        }
        else
        {
            var e = Model.Employee;
            var co = Model.Company;

            <div class="row">
                <div class="col-md-4">
                    <div class="card card-outline card-primary">
                        <div class="card-header"><h3 class="card-title mb-0">Mitarbeiter</h3></div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-5">Name</dt>
                                <dd class="col-7">@e.FirstName @e.LastName</dd>

                                <dt class="col-5">Firma</dt>
                                <dd class="col-7">@((co is not null) ? co.Name : "—")</dd>

                                <dt class="col-5">Gehaltsart</dt>
                                <dd class="col-7">@(e.SalaryType == "Hourly" ? "Stundenlohn" : "Monatslohn")</dd>

                                <dt class="col-5">Bruttolohn</dt>
                                <dd class="col-7">@e.BruttoSalary.ToString("N2") CHF</dd>

                                <dt class="col-5">Stundenlohn</dt>
                                <dd class="col-7">@e.HourlyRate.ToString("N2") CHF</dd>

                                <dt class="col-5">Monatsstunden</dt>
                                <dd class="col-7">@e.MonthlyHours</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card card-outline card-success">
                        <div class="card-header"><h3 class="card-title mb-0">Lohnparameter</h3></div>
                        <div class="card-body">
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Input.EmployeeId" />

                                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                <h5>Periode &amp; Grundlohn</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.Period">Abrechnungsmonat</label>
                                        <input asp-for="Input.Period" type="date" class="form-control" />
                                        <span asp-validation-for="Input.Period" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.GrossMonthly">Bruttolohn (Monat)</label>
                                        <input asp-for="Input.GrossMonthly" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="Input.GrossMonthly" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.WeeklyHours">Wochenstunden</label>
                                        <input asp-for="Input.WeeklyHours" type="number" min="1" max="60" step="1" class="form-control" />
                                        <span asp-validation-for="Input.WeeklyHours" class="text-danger"></span>
                                    </div>
                                </div>

                                <hr />
                                <h5>Zulagen &amp; Abzüge</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.Bonus">Bonus</label>
                                        <input asp-for="Input.Bonus" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.ExtraAllowance">Weitere Zulagen</label>
                                        <input asp-for="Input.ExtraAllowance" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.UnpaidDeduction">Unbezahlte Abzüge</label>
                                        <input asp-for="Input.UnpaidDeduction" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.OtherDeduction">Sonstige Abzüge</label>
                                        <input asp-for="Input.OtherDeduction" type="number" step="0.01" class="form-control" />
                                    </div>
                                </div>

                                <hr />
                                <h5>Sozialversicherungen</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyAHV" value="true" @(Model.Input.ApplyAHV ? "checked" : "") />
                                            <label class="form-check-label">AHV</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyALV" value="true" @(Model.Input.ApplyALV ? "checked" : "") />
                                            <label class="form-check-label">ALV</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyBVG" value="true" @(Model.Input.ApplyBVG ? "checked" : "") />
                                            <label class="form-check-label">BVG</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyNBU" value="true" @(Model.Input.ApplyNBU ? "checked" : "") />
                                            <label class="form-check-label">NBU</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyBU" value="true" @(Model.Input.ApplyBU ? "checked" : "") />
                                            <label class="form-check-label">BU</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyFAK" value="true" @(Model.Input.ApplyFAK ? "checked" : "") />
                                            <label class="form-check-label">FAK</label>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <h5>Quellensteuer</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.PermitType">Bewilligung</label>
                                        <select asp-for="Input.PermitType" class="form-control" asp-items="Model.PermitTypes"></select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.Canton">Kanton</label>
                                        <input asp-for="Input.Canton" class="form-control" maxlength="2" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.WithholdingTaxCode">QST-Tarif</label>
                                        <select asp-for="Input.WithholdingTaxCode" class="form-control" asp-items="Model.QstTariffCodes"></select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" name="Input.ApplyQST" value="true" @(Model.Input.ApplyQST ? "checked" : "") />
                                            <label class="form-check-label">QST anwenden</label>
                                        </div>
                                        <div class="form-check mt-1">
                                            <input class="form-check-input" type="checkbox" name="Input.ChurchMember" value="true" @(Model.Input.ChurchMember ? "checked" : "") />
                                            <label class="form-check-label">Kirchensteuer</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-3 d-flex gap-2">
                                    <a class="btn btn-outline-secondary" href="~/Employees/Details/@Model.Employee.Id#loehne">Abbrechen</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-calculator"></i> Berechnen &amp; speichern
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

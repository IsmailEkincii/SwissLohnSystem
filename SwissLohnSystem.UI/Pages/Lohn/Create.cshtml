@page
@model SwissLohnSystem.UI.Pages.Lohn.CreateModel
@{
    ViewData["Title"] = "Neue Lohnabrechnung";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Neue Lohnabrechnung</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/">Dashboard</a></li>
                    @if (Model.Company is not null)
                    {
                        <li class="breadcrumb-item">
                            <a href="~/Companies/Details/@Model.Company.Id">
                                @Model.Company.Name
                            </a>
                        </li>
                    }
                    <li class="breadcrumb-item active">Lohn abrechnen</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

       @if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Employee is null && string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-warning">
        Mitarbeiterdaten konnten nicht geladen werden.
    </div>
}


        @if (Model.Employee is null)
        {
            <div class="alert alert-warning">
                Mitarbeiterdaten konnten nicht geladen werden.
            </div>
        }
        else
        {
            var e = Model.Employee;
            var co = Model.Company;

            <!-- Mitarbeiter / Firma Info -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-outline card-primary">
                        <div class="card-header">
                            <h3 class="card-title mb-0">Mitarbeiter</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-5">Name</dt>
                                <dd class="col-7">@e.FirstName @e.LastName</dd>

                                <dt class="col-5">Firma</dt>
                                <dd class="col-7">
                                    @if (co is not null)
                                    {
                                        @co.Name
                                    }
                                    else
                                    {
                                        @:—
                                    }
                                </dd>

                                <dt class="col-5">Gehaltsart</dt>
                                <dd class="col-7">
                                    @(e.SalaryType == "Hourly" ? "Stundenlohn" : "Monatslohn")
                                </dd>

                                <dt class="col-5">Bruttolohn</dt>
                                <dd class="col-7">@e.BruttoSalary.ToString("N2") CHF</dd>

                                <dt class="col-5">Stundenlohn</dt>
                                <dd class="col-7">@e.HourlyRate.ToString("N2") CHF</dd>

                                <dt class="col-5">Monatsstunden</dt>
                                <dd class="col-7">@e.MonthlyHours</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- FORM -->
                <div class="col-md-8">
                    <div class="card card-outline card-success">
                        <div class="card-header">
                            <h3 class="card-title mb-0">Lohnparameter</h3>
                        </div>

                        <div class="card-body">
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Input.EmployeeId" />

                                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                <!-- Periode & Grundlohn -->
                                <h5>Periode & Grundlohn</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.Period">Abrechnungsmonat</label>
                                        <input asp-for="Input.Period"
                                               type="date"
                                               class="form-control" />
                                        <span class="form-text text-muted">
                                            Wählen Sie ein Datum im gewünschten Monat (z.B. 01.MM.JJJJ).
                                        </span>
                                        <span asp-validation-for="Input.Period" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.GrossMonthly">Bruttolohn (Monat)</label>
                                        <input asp-for="Input.GrossMonthly"
                                               type="number"
                                               step="0.01"
                                               class="form-control" />
                                        <span asp-validation-for="Input.GrossMonthly" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.WeeklyHours">Wochenstunden</label>
                                        <input asp-for="Input.WeeklyHours"
                                               type="number"
                                               min="1"
                                               max="60"
                                               step="0.5"
                                               class="form-control" />
                                        <span asp-validation-for="Input.WeeklyHours" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Tage (Arbeit / Krank / Unbezahlt) -->
                                <hr />
                                <h5>Arbeitstage & Abwesenheiten (optional)</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.WorkedDays">Gearbeitete Tage</label>
                                        <input asp-for="Input.WorkedDays"
                                               type="number"
                                               min="0"
                                               max="31"
                                               step="0.5"
                                               class="form-control" />
                                        <span asp-validation-for="Input.WorkedDays" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.SickDays">Krankheitstage</label>
                                        <input asp-for="Input.SickDays"
                                               type="number"
                                               min="0"
                                               max="31"
                                               step="0.5"
                                               class="form-control" />
                                        <span asp-validation-for="Input.SickDays" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Input.UnpaidDays">Unbezahlte Tage</label>
                                        <input asp-for="Input.UnpaidDays"
                                               type="number"
                                               min="0"
                                               max="31"
                                               step="0.5"
                                               class="form-control" />
                                        <span asp-validation-for="Input.UnpaidDays" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Zulagen & Abzüge -->
                                <hr />
                                <h5>Zulagen & Abzüge</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.Bonus">Bonus</label>
                                        <input asp-for="Input.Bonus"
                                               type="number"
                                               step="0.01"
                                               class="form-control" />
                                        <span asp-validation-for="Input.Bonus" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.ExtraAllowance">Weitere Zulagen</label>
                                        <input asp-for="Input.ExtraAllowance"
                                               type="number"
                                               step="0.01"
                                               class="form-control" />
                                        <span asp-validation-for="Input.ExtraAllowance" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.UnpaidDeduction">Unbezahlte Abzüge</label>
                                        <input asp-for="Input.UnpaidDeduction"
                                               type="number"
                                               step="0.01"
                                               class="form-control" />
                                        <span asp-validation-for="Input.UnpaidDeduction" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.OtherDeduction">Sonstige Abzüge</label>
                                        <input asp-for="Input.OtherDeduction"
                                               type="number"
                                               step="0.01"
                                               class="form-control" />
                                        <span asp-validation-for="Input.OtherDeduction" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Sozialversicherungen -->
                                <hr />
                                <h5>Sozialversicherungen (AN/AG Beiträge anwenden)</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyAHV" class="form-check-input" />
                                            <label asp-for="Input.ApplyAHV" class="form-check-label">AHV/IV/EO</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyALV" class="form-check-input" />
                                            <label asp-for="Input.ApplyALV" class="form-check-label">ALV</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyBVG" class="form-check-input" />
                                            <label asp-for="Input.ApplyBVG" class="form-check-label">BVG</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyNBU" class="form-check-input" />
                                            <label asp-for="Input.ApplyNBU" class="form-check-label">NBU</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyBU" class="form-check-input" />
                                            <label asp-for="Input.ApplyBU" class="form-check-label">BU</label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-check">
                                            <input asp-for="Input.ApplyFAK" class="form-check-input" />
                                            <label asp-for="Input.ApplyFAK" class="form-check-label">FAK</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Quellensteuer -->
                                <hr />
                                <h5>Quellensteuer & Kanton</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.PermitType">Bewilligung</label>
                                        <select asp-for="Input.PermitType"
                                                class="form-control"
                                                asp-items="Model.PermitTypes">
                                        </select>
                                        <span asp-validation-for="Input.PermitType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.Canton">Kanton</label>
                                        <input asp-for="Input.Canton"
                                               class="form-control"
                                               maxlength="2" />
                                        <span asp-validation-for="Input.Canton" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="Input.WithholdingTaxCode">Quellensteuer-Tarif</label>
                                        <select asp-for="Input.WithholdingTaxCode"
                                                class="form-control"
                                                asp-items="Model.QstTariffCodes"
                                                id="QstTarifSelect">
                                        </select>
                                        <span asp-validation-for="Input.WithholdingTaxCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="form-check mt-4">
                                            <input asp-for="Input.ApplyQST"
                                                   class="form-check-input"
                                                   id="ApplyQstCheckbox" />
                                            <label asp-for="Input.ApplyQST" class="form-check-label">Quellensteuer anwenden</label>
                                        </div>
                                        <div class="form-check mt-1">
                                            <input asp-for="Input.ChurchMember" class="form-check-input" />
                                            <label asp-for="Input.ChurchMember" class="form-check-label">Kirchensteuerpflichtig</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-3 d-flex gap-2">
                                    <a class="btn btn-outline-secondary"
                                       href="~/Employees/Details/@Model.Employee.Id#loehne">
                                        Abbrechen
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-calculator"></i> Berechnen &amp; speichern
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- col-md-8 -->
            </div>

            <!-- row -->
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const qstCheckbox = document.getElementById('ApplyQstCheckbox');
            const qstSelect = document.getElementById('QstTarifSelect');

            function toggleQstSelect() {
                if (!qstCheckbox || !qstSelect) return;
                qstSelect.disabled = !qstCheckbox.checked;
            }

            document.addEventListener('DOMContentLoaded', toggleQstSelect);
            if (qstCheckbox) {
                qstCheckbox.addEventListener('change', toggleQstSelect);
            }
        })();
    </script>
}

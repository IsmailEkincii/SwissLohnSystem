                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                            <i class="bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h3>Adresse</h3>
                                <p>Pumpwerkstrasse 15, 8105 Regensdorf, Zürich</p>
                            </div>
                        </div>
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-telephone flex-shrink-0"></i>
                            <div>
                                <h3>Telefon</h3>
                                <p>078 830 55 85</p>
                            </div>
                        </div>
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h3>Email</h3>
                                <p>info@einzelberg.ch</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        <form method="post" asp-page-handler="SendMessage" class="php-email-form">
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <input asp-for="Name" class="form-control" placeholder="Ihr Name" required />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" placeholder="Ihre Email" required />
                                </div>
                                <div class="col-md-12">
                                    <textarea asp-for="Message" class="form-control" rows="6" placeholder="Nachricht" required></textarea>
                                </div>
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary">Nachricht senden</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </section>
        
